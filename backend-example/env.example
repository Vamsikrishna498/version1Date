# Backend Environment Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=8080
NODE_ENV=development

# JWT Configuration (CRITICAL - MUST BE CHANGED!)
# Use a strong random string with at least 32 characters
# Generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_AND_SECURE_RANDOM_STRING_MIN_32_CHARS_REQUIRED

# JWT Expiry (e.g., 1h, 24h, 7d, 30d)
JWT_EXPIRY=24h

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/agristack
DATABASE_TYPE=postgresql

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# IMPORTANT NOTES:
# 1. Copy this file to .env
# 2. Generate a strong JWT_SECRET using crypto.randomBytes
# 3. NEVER commit .env file to version control
# 4. Use different secrets for different environments

