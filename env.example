# ===========================================
# Environment Variables Configuration
# ===========================================
# 
# Copy this file to .env and update values as needed
# DO NOT commit .env file to version control!
# Rename this file from env.example to .env.example
#

# ===========================================
# API Configuration
# ===========================================
# Backend API base URL
REACT_APP_API_URL=http://localhost:8080/api

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# ===========================================
# Application Configuration
# ===========================================
# Environment mode (development, staging, production)
NODE_ENV=development

# Application name
REACT_APP_NAME=AgriStack Farmer Management

# ===========================================
# Feature Flags
# ===========================================
# Enable debug mode (shows console logs)
REACT_APP_ENABLE_DEBUG=true

# Enable analytics
REACT_APP_ENABLE_ANALYTICS=false

# ===========================================
# Authentication Configuration
# ===========================================
# Session timeout in milliseconds (1 hour = 3600000)
REACT_APP_SESSION_TIMEOUT=3600000

# Token refresh interval in milliseconds (5 minutes = 300000)
REACT_APP_TOKEN_REFRESH_INTERVAL=300000

# ===========================================
# Security Configuration
# ===========================================
# Enable CAPTCHA
REACT_APP_ENABLE_CAPTCHA=true

# reCAPTCHA Site Key
REACT_APP_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Maximum login attempts
REACT_APP_MAX_LOGIN_ATTEMPTS=5

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum file size in MB
REACT_APP_MAX_FILE_SIZE=5

# Allowed file types
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ===========================================
# Backend Configuration
# ===========================================
# Server port
PORT=8080

# JWT Secret Key (MUST be changed in production!)
# CRITICAL: Use a strong random string (32+ characters)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_AND_SECURE_RANDOM_STRING_MIN_32_CHARS

# JWT Expiry
JWT_EXPIRY=24h

# Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/agristack

# ===========================================
# CORS Configuration
# ===========================================
# Allowed origins (comma separated)
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===========================================
# External Services (Optional)
# ===========================================
# Google Maps API Key
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Sentry DSN for error tracking
REACT_APP_SENTRY_DSN=your_sentry_dsn

# ===========================================
# IMPORTANT NOTES
# ===========================================
# 1. Copy this file to .env
# 2. Update all values with your actual configuration
# 3. NEVER commit .env file to version control
# 4. Use strong, unique JWT_SECRET (32+ characters)
# 5. For production, set NODE_ENV=production

